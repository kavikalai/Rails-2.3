<body>
<%if @users.present?%>
<div class="shadow-lg p-3 mb-5 bg-white rounded" style="margin-right: 15px;">
<table class="table table-striped">
    <thead>
      <tr>
        <th>S.No</th>
        <th>User Name</th>
        <th>Email Id</th>
        <th>Designation</th>
        <th>Contact No</th>        
      </tr>
    </thead>

    <tbody>
      <%i=1%>
      <%@users.each do |u|%>
       <tr>
        <td><%=i%></td>
        <td><%=u.user_name%></td>
        <td><%=u.email%></td>
        <td><%=u.type%></td>
        <td><%=u.contact_no%></td>
        <td><%=link_to 'Edit',edit_user_users_path(:id=>u.id)%></td>
        <td><%=link_to 'Delete', user_path(:id=>u.id),:method=>:delete,:confirm => 'Are you sure?'%></td>
      </tr> 
      <%i+=1%>
      <%end%>     
  </tbody>
</table>
</div>
<%else%>
<%end%>
</body>