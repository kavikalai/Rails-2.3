<% form_for :user, @users do |f| %>
    <div class="modal fade" id="modalContactForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"     aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content" style="padding: 2rem;">
          <div class="modal-header">
            <h3>Signin</h3> 
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
         </div>
        <div class="modal-body">
          <div class="form-group">
            <label>User Name:</label><%=f.text_field :user_name,:class=>"form-control",:required => true%>
            <label>Email Id</label><%=f.text_field :email,:class=>"form-control",:required => true%>
            <label>Password</label><%=f.password_field :password,:class=>"form-control",:required => true%>
            <label>Conform Password</label><%=f.password_field :conform_password,:class=>"form-control",:required => true%>
            <label>Contact No</label><%=f.text_field :contact_no,:class=>"form-control",:required => true%>
            <label>Address</label><%=f.text_area :address, :cols=>50, :rows=>4, :class=>"form-control"%>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <%=f.radio_button :type,'admin',:class=>"custom-control-input"%>
           <!--  <input type="radio" class="custom-control-input" id="admin" name="type"> -->
            <label class="custom-control-label" for="user_type_admin">Admin</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <%=f.radio_button :type,'doctor',:class=>"custom-control-input"%>
<!--              <input type="radio" class="custom-control-input" id="doctor" name="type">
 -->              <label class="custom-control-label" for="user_type_doctor">Doctor</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <%=f.radio_button :type,'patient',:class=>"custom-control-input"%>
<!--              <input type="radio" class="custom-control-input" id="patient" name="type">
 -->             <label class="custom-control-label" for="user_type_patient">Patient</label>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Save", :name=>nil, :class=>"btn btn-success",:style=>"width: 15%; hight: 10%" %>
        </div>
        </div>
      </div>
    </div>
<%end%>






